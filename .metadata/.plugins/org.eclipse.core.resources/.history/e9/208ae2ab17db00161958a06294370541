package chaussia.shared.gebaeude;

import chaussia.shared.rohstoffe.Rohstoff;

public class ProduktionsgebaeudeFactory
{
    private final int bauzeit1   = 2;
    private final int bauzeit2   = 3;
    private final int unterhalt1 = 2;
    private final int unterhalt2 = 4;
    private final int ertrag1    = 10;

    public ProduktionsgebaeudeFactory()
    {
    }

    public Produktionsgebaeude create(String typ)
    {
        Produktionsgebaeude produktionsgebaeude = null;
        switch (typ.toLowerCase())
        {
            case "holzfaeller":
                produktionsgebaeude = new Holzfaeller();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt1);
                produktionsgebaeude.setBauzeit(this.bauzeit1);
                break;
            case "mine":
                produktionsgebaeude = new Mine();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt1);
                produktionsgebaeude.setBauzeit(this.bauzeit1);
                break;
            case "bauernhof":
                produktionsgebaeude = new Bauernhof();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt1);
                produktionsgebaeude.setBauzeit(this.bauzeit1);
                break;
            case "lehmgrube":
                produktionsgebaeude = new Lehmgrube();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt1);
                produktionsgebaeude.setBauzeit(this.bauzeit1);
                break;
            case "schaefer":
                produktionsgebaeude = new Schaefer();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt1);
                produktionsgebaeude.setBauzeit(this.bauzeit1);
                break;
            case "webstube":
                produktionsgebaeude = new Webstube();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt2);
                produktionsgebaeude.setBauzeit(this.bauzeit2);
                break;
            case "saegewerk":
                produktionsgebaeude = new Saegewerk();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt2);
                produktionsgebaeude.setBauzeit(this.bauzeit2);
                break;
            case "baeckerei":
                produktionsgebaeude = new Baeckerei();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt2);
                produktionsgebaeude.setBauzeit(this.bauzeit2);
                break;
            case "schmiede":
                produktionsgebaeude = new Schmiede();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt2);
                produktionsgebaeude.setBauzeit(this.bauzeit2);
                break;
            case "ziegelei":
                produktionsgebaeude = new Ziegelei();
                produktionsgebaeude.setErtrag(this.ertrag1);
                produktionsgebaeude.setUnterhaltskosten(this.unterhalt2);
                produktionsgebaeude.setBauzeit(this.bauzeit2);
                break;
            default:
                break;
        }
        return produktionsgebaeude;
    }
}
