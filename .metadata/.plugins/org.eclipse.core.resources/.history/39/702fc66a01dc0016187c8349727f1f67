package chaussia.shared.gebaeude.produktion;

import chaussia.shared.einheiten.Einheit.Typ;
import chaussia.shared.rohstoffe.Rohstoff;

public interface Produktionsgebaeude
{

    boolean isBesetzt();

    void setBesetzt(boolean besetzt);

    int getErtrag();

    void setErtrag(int ertrag);

    boolean isArbeitet();

    void setArbeitet(boolean arbeitet);

    Rohstoff getRohstoff();

    Einheit.Typ getArbeiter();

}