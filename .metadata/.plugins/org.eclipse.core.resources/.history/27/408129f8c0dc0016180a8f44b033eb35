package chaussia.shared.rohstoffe;

public class Rohstoff
{
    private Rohstofftyp typ;
    private int         menge;

    public Rohstoff(Rohstofftyp typ, int menge)
    {
        this.typ = typ;
        this.menge = menge;
    }

    public Rohstofftyp getTyp()
    {
        return this.typ;
    }

    public int getMenge()
    {
        return this.menge;
    }

    public void setMenge(int menge)
    {
        this.menge = menge;
    }

    public void add(Rohstoff rohstoff)
    {
        if (rohstoff.typ == this.typ)
        {
            this.menge += rohstoff.menge;
        }
    }

}
