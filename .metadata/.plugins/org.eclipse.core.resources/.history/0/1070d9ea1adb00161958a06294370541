package chaussia.shared.test;

import chaussia.shared.gebaeude.Gebaeude;
import chaussia.shared.gebaeude.Produktionsgebaeude;
import chaussia.shared.gebaeude.ProduktionsgebaeudeFactory;

public class Test
{

    public static void main(String[] args)
    {
        Gebaeude gebaeude = new ProduktionsgebaeudeFactory().create("holzfaeller");
        gebaeude = new ProduktionsgebaeudeFactory().create(gebaeude.getClass().getSimpleName());
        System.out.println(gebaeude.getClass().getSimpleName());
        ((Produktionsgebaeude) gebaeude).setArbeitet(true);
        ((Produktionsgebaeude) gebaeude).setBesetzt(true);
        for (int i = 0; i < 5; i++)
        {
            gebaeude.reduziereBauzeit();
            System.out.println(gebaeude.getBauzeit());
            System.out.println(((Produktionsgebaeude) gebaeude).getErtrag());
        }
        gebaeude.upgrade();
        for (int i = 0; i < 5; i++)
        {
            gebaeude.reduziereUpgradeDauer();
            System.out.println(gebaeude.getUpgradedauer());
            System.out.println(((Produktionsgebaeude) gebaeude).getErtrag());
        }
    }

}
