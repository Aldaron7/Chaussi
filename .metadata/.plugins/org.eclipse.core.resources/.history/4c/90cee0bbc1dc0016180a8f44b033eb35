package chaussia.shared.rohstoffe;

public class Rohstoff
{
    private Rohstofftyp typ;
    private int         menge;

    public Rohstoff(Rohstofftyp typ, int menge)
    {
        this.typ = typ;
        this.menge = menge;
    }

    public Rohstofftyp getTyp()
    {
        return this.typ;
    }

    public int getMenge()
    {
        return this.menge;
    }

    public void setMenge(int menge)
    {
        this.menge = menge;
    }

    public void add(Rohstoff rohstoff) throws IllegalArgumentException
    {
        if (rohstoff.typ.equals(this.typ))
        {
            this.menge += rohstoff.menge;
        }
        else
        {
            throw new IllegalArgumentException();
        }
    }

    public void sub(Rohstoff rohstoff) throws IllegalArgumentException
    {
        if (rohstoff.typ.equals(this.typ) && rohstoff.menge <= this.menge)
        {
            this.menge -= rohstoff.menge;
        }
        else
        {
            throw new IllegalArgumentException();
        }
    }

}
