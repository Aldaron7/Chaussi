package chaussia.shared.einheiten.produktion;

import chaussia.shared.einheiten.Einheit;

public class ArbeiterFactory
{
    private final int ausbildungszeit1 = 1;
    private final int ausbildungszeit2 = 3;

    public ArbeiterFactory()
    {
    }

    public Arbeiter create(Einheit.Einheitentyp typ)
    {
        AbstractArbeiter arbeiter = null;
        switch (typ)
        {
            case EINFACHER_ARBEITER:
                arbeiter = new EinfacherArbeiter();
                arbeiter.setAusbildungszeit(this.ausbildungszeit1);
                break;
            case GESELLE:
                arbeiter = new Geselle();
                arbeiter.setAusbildungszeit(this.ausbildungszeit2);
            default:
                break;
        }
        if (arbeiter != null)
        {
            arbeiter.setTyp(typ);
        }
        return arbeiter;
    }
}
