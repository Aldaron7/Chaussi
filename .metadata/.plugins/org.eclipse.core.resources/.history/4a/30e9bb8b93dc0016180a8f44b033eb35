package chaussia.shared.gebaeude;

import java.util.List;

public interface Gebaeude
{
    public enum Gebaeudetyp
    {
        // Ortschaft
        DORF, STADT, GROSSSTADT,
        // Produktion
        HOLZFAELLER, LEHMGRUBE, SCHAEFER, BAUERNHOF, MINE, SAEGEWERK, ZIEGELEI, WEBSTUBE, BAECKEREI, SCHMIEDE,
        // Ausbildung
        SCHULE, UNIVERSITAET;
    }

    int getUnterhaltskosten();

    void setUnterhaltskosten(int unterhaltskosten);

    void reduziereBauzeit();

    void reduziereUpgradeDauer();

    int getUpgradedauer();

    void setUpgradedauer(int upgradedauer);

    int getBauzeit();

    void setBauzeit(int bauzeit);

    int getStufe();

    void setTyp(Gebaeude.Gebaeudetyp typ);

    Gebaeude.Gebaeudetyp getTyp();

    Gebaeude upgrade();

    List<Gebaeude.Gebaeudetyp> getBenoetigteGebaeude();

    RohstoffKosten getBaukosten();

}