package chaussia.shared.einheiten;

import chaussia.shared.gebaeude.RohstoffKosten;

public abstract class AbstractEinheit implements Einheit
{
    private int ausbildungszeit, bewegungspunkte, unterhaltskosten = 0;
    private Typ typ;

    public AbstractEinheit()
    {
    }

    

    @Override
    public int getAusbildungszeit()
    {
        return this.ausbildungszeit;
    }

    @Override
    public void setAusbildungszeit(int ausbildungszeit)
    {
        this.ausbildungszeit = ausbildungszeit;
    }

    @Override
    public int getBewegungspunkte()
    {
        return this.bewegungspunkte;
    }

    @Override
    public void setBewegungspunkte(int bewegungspunkte)
    {
        this.bewegungspunkte = bewegungspunkte;
    }

    @Override
    public int getUnterhaltskosten()
    {
        return this.unterhaltskosten;
    }

    @Override
    public void setUnterhaltskosten(int unterhaltskosten)
    {
        this.unterhaltskosten = unterhaltskosten;
    }

    @Override
    public void setTyp(Typ typ)
    {
        this.typ = typ;
    }

    @Override
    public Typ getTyp()
    {
        return this.typ;
    }

    @Override
    public abstract RohstoffKosten getAusbildungskosten();

    @Override
    public abstract int getMaxBewegungspunkte();

}
