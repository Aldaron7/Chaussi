package chaussia.shared.gebaeude.ortschaft;

public class OrtschaftFactory
{
    
    public static final String GROSSSTADT = "grossstadt";
    public static final String STADT = "stadt";
    public static final String DORF = "dorf";
    private final int steuerertrag = 10;

    public OrtschaftFactory()
    {
    }

    public Ortschaft create(String typ)
    {
        Ortschaft ortschaft = null;
        switch (typ.toLowerCase())
        {
            case DORF:
                ortschaft = new Dorf();
                ortschaft.setBauzeit(0);
                ortschaft.setSteuerertrag(this.steuerertrag);
                break;
            case STADT:
                ortschaft = new Stadt();
                ortschaft.setBauzeit(2);
                ortschaft.setSteuerertrag(2 * this.steuerertrag);
                break;
            case GROSSSTADT:
                ortschaft = new Grossstadt();
                ortschaft.setBauzeit(6);
                ortschaft.setSteuerertrag(4 * this.steuerertrag);
                break;
            default:
                break;
        }
        return ortschaft;
    }
}
