package chaussia.shared.einheiten.arbeiter;

public class ArbeiterFactory
{
    public static final String EINFACHER_ARBEITER = "einfacherarbeiter";
    public static final String GESELLE            = "geselle";

    public ArbeiterFactory()
    {
    }

    public Arbeiter create(String typ)
    {
        Arbeiter arbeiter = null;
        switch (typ.toLowerCase())
        {
            case EINFACHER_ARBEITER:
                arbeiter = new EinfacherArbeiter();
                break;
            case GESELLE:
                arbeiter = new Geselle();
            default:
                break;
        }
        return arbeiter;
    }
}
