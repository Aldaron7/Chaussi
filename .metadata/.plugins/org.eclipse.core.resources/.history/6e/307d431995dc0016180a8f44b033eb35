package chaussia.shared.gebaeude.produktion;

import chaussia.shared.einheiten.Einheitentyp;
import chaussia.shared.gebaeude.Gebaeude;
import chaussia.shared.rohstoffe.Rohstoff;

public interface Produktionsgebaeude extends Gebaeude
{


    int getErtrag();

    boolean isArbeitet();

    void setArbeitet(boolean arbeitet);

    Rohstoff getRohstoff();

    Einheitentyp getArbeitertyp();

    int getMaxArbeiter();
    
    void addArbeiter();
    
    void removeArbeiter();

}